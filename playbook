---
- name: Install Postgresql
  hosts:  client
  become: true
  gather_facts: True
  gather_subset:
    - network
    - virtual
  roles:
    - { role:  sys.kubectl_el, when: ansible_distribution == 'CentOS'}
    - { role:  sys.kubectl_ubuntu, when: ansible_distribution == 'Ubuntu'}
    - { role:  sys.set_credentials, tags: set-credential }
